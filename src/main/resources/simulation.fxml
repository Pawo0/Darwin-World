<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="750.0" minWidth="1000.0"
            fx:controller="org.example.simulations.SimulationPresenter"
>
    <center>
        <!--        <Label fx:id="infoLabel" text="All animals will be living here!" textAlignment="CENTER"/>-->
        <GridPane fx:id="mapGrid" gridLinesVisible="true" alignment="CENTER">
        </GridPane>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="napis" text="Manage" textAlignment="CENTER"/>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Start" onAction="#start"/>
                <Button text="Pause" onAction="#pause"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
