<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="750.0" minWidth="1000.0"
            fx:controller="org.example.simulations.SimulationPresenter"
>
    <center>
        <HBox>
            <GridPane fx:id="mapGrid" gridLinesVisible="true" alignment="CENTER">
            </GridPane>
            <GridPane gridLinesVisible="true">
                <columnConstraints>
                    <ColumnConstraints maxWidth="150" minWidth="150" prefWidth="150" />
                    <ColumnConstraints maxWidth="100" minWidth="100" prefWidth="100" />
                </columnConstraints>
                <Label text="Day: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label text="Live animals amount: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label text="Dead animals amount: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label text="Grass amount: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <Label text="Dominant Genome: " GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <Label text="Average energy: " GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <Label text="Average lifespan: " GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <Label text="Average descendant amount: " GridPane.columnIndex="0" GridPane.rowIndex="7" />


                <Label fx:id="day" GridPane.columnIndex="1" GridPane.rowIndex="0" text="0" />
                <Label fx:id="liveAnimalsAmount" GridPane.columnIndex="1" GridPane.rowIndex="1" text="0" />
                <Label fx:id="deadAnimalsAmount" GridPane.columnIndex="1" GridPane.rowIndex="2" text="0" />
                <Label fx:id="grassAmount" GridPane.columnIndex="1" GridPane.rowIndex="3" text="0" />
                <Label fx:id="dominantGenome" GridPane.columnIndex="1" GridPane.rowIndex="4" text="0" />
                <Label fx:id="averageEnergy" GridPane.columnIndex="1" GridPane.rowIndex="5" text="0" />
                <Label fx:id="averageLifeSpan" GridPane.columnIndex="1" GridPane.rowIndex="6" text="0" />
                <Label fx:id="averageDescendantAmount" GridPane.columnIndex="1" GridPane.rowIndex="7" text="0" />

                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>

            </GridPane>
        </HBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="napis" text="Manage" textAlignment="CENTER"/>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Start" onAction="#start"/>
                <Button text="Pause" onAction="#pause"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
